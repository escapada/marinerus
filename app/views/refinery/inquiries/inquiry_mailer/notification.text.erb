<% Globalize.locale.to_s=="ru" ? is_ru=true : is_ru=false %>

<%=raw t('.greeting') %>,

<%=raw t('.you_recieved_new_inquiry') %>

<%=raw t('.inquiry_starts') %>

<%=raw t('.from') %>: <%= @inquiry.name %>
<%=raw t('.email') %>: <%= @inquiry.email %>
<%=raw t('.phone') %>: <%= @inquiry.phone %>
<% unless @inquiry.lot_id.blank? %>
<%= is_ru ? "Лот №" : "ID" %>: <%=html_safe link_to @inquiry.lot_id, refinery.ships_ship_url(@inquiry.lot_id), {:target => "_blank"} %>
<% end %>
<%=raw t('.message') %>:
<%=raw strip_tags(@inquiry.message) %>

<%=raw t('.inquiry_ends') %>

<%=raw t('.closing_line') %>,
<%=raw Refinery::Core.site_name %>

