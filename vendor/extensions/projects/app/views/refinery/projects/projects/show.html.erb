<% content_for :body do %>
  <article class="news_item">
    <h2><%= @project.title %></h2>
    <p class="date_underline">
      <small><%= t('.published') %> <%= l(@project.updated_at, :format => :long) %></small>
    </p>
    <%= @project.description.html_safe %>
    <p>
      <%= link_to t('.back_to_index'), refinery.projects_projects_path, style: "color:#2c87af;" %>
    </p>
  </article>
<% end %>

<div class="wrap">
  <div id="container">
    <div class="content_container_big">
      <%= render "/refinery/content_page" %>
    </div>
    <div class="right-column">
      <%= render "/refinery/adds", collection: @adds %>
    </div>
  </div>
</div>