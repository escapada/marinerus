<span class="h3 show_search">Расширенный поиск</span>
<%= form_tag("", method: "get") do %>
<div id="advanced_search">
	<table id="advanced_search_table" cellspacing="0" cellpadding="0" width="90%">
		<thead>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
			<th width="10%" height="0"></th>
		</thead>
		<tbody>
			<tr>
				<td colspan="2">Статус:</td>
				<td colspan="3" class="value"><%= select_tag(:status_id, options_from_collection_for_select(@statuss, :id, Globalize.locale.to_s=="ru" ? :rutitle : :entitle), :include_blank=>true) %></td>
				<td colspan="2">Название:</td>
				<td colspan="3" class="value"><%= text_field_tag(:title) %></td>
			</tr>
			<tr>
				<td colspan="2">Тип судна:</td>
				<td colspan="3" class="value"><%= select_tag(:category_id, options_from_collection_for_select(@categories, :id, Globalize.locale.to_s=="ru" ? :rutitle : :entitle), :include_blank=>true) %></td>
				<td colspan="2">Проект:</td>
				<td colspan="3" class="value"><%= text_field_tag(:project) %></td>
			</tr>
			<tr>
				<td colspan="2">Разряд плавания:</td>
				<td colspan="3" class="value"><%= select_tag(:area, options_from_collection_for_select(@areas, :id, Globalize.locale.to_s=="ru" ? :rutitle : :entitle), :include_blank=>true) %></td>
				<td colspan="2">Флаг:</td>
				<td colspan="3" class="value"><%= text_field_tag(:flag) %></td>
			</tr>
			<tr>
				<td colspan="2">Период постройки:</td>
				<td colspan="3" class="value">от <%= date_select("first_date", "", {:discard_day=>true, :discard_month=>true, :start_year=>Time.now.year - 50, :end_year=>Time.now.year, :include_blank=>true}) %></td>
				<td colspan="3" class="value">до <%= date_select("last_date", "", {:discard_day=>true, :discard_month=>true, :start_year=>Time.now.year - 50, :end_year=>Time.now.year, :include_blank=>true}) %></td>
				<td colspan="2"></td>
			</tr>
			<tr>
				<td colspan="2">Длина:</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_length) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_length) %></td>
				<td colspan="2" class="value">м.</td>
			</tr>
			<tr>
				<td colspan="2">Осадка в грузу:</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_max_draught) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_max_draught) %></td>
				<td colspan="2" class="value">м.</td>
			</tr>
			<tr>
				<td colspan="2">Дедвейт:</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_deadweight) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_deadweight) %></td>
				<td colspan="2" class="value">т.</td>
			</tr>
			<tr>
				<td colspan="2">Цена:</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_price) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_price) %></td>
				<td colspan="2" class="value"><%= select_tag(:currency_id, options_from_collection_for_select(@currencies, :id, Globalize.locale.to_s=="ru" ? :rutitle : :entitle)) %></td>
			</tr>
			<tr>
				<td colspan="2">Общая мощность:</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_power) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_power) %></td>
				<td colspan="2" class="value"><%= select_tag(:power_id, options_from_collection_for_select(@powers, :id, Globalize.locale.to_s=="ru" ? :rutitle : :entitle)) %></td>
			</tr>
			<tr>
				<td colspan="2">Количество пассажиров</td>
				<td colspan="3" class="value">от <%= text_field_tag(:first_passengers) %></td>
				<td colspan="3" class="value">до <%= text_field_tag(:last_passengers) %></td>
				<td colspan="2" class="value">чел.</td>
			</tr>
			<tr>
				<td colspan="5"><%= submit_tag("", type: 'image', src: asset_path('search_form_btn.png'), style: "width:218px; heght:39px;") %></td>
				<td colspan="5" class="value"><%= image_tag('clear_form_btn.png', class: "clear_form_btn") %></td>
			</tr>
		</tbody>
	</table>
</div>
<% end %>