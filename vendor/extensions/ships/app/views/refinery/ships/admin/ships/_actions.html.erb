<ul>
  <% if ::Refinery::Ships::Admin::ShipsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.ships_admin_ships_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_ships_admin_ship_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Ships::Admin::ShipsController.sortable? && ::Refinery::Ships::Ship.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Ships"),
                 refinery.ships_admin_ships_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Ships"),
                 refinery.ships_admin_ships_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
