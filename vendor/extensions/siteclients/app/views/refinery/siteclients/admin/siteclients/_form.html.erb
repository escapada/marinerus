<%= form_for [refinery, :siteclients_admin, @siteclient] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @siteclient,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email, :class => 'larger widest' -%>
  </div>
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company, :class => 'larger widest' -%>
  </div>
  <div class='field'>
    <%= f.label :job -%>
    <%= f.text_field :job, :class => 'larger widest' -%>
  </div>
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone, :class => 'larger widest' -%>
  </div>
  <div class="field">
    <span style="font-size:20px; display:block; margin:20px 0;">Подписка на новости:<%= f.check_box :mail_me %></span>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.siteclients.admin.siteclients.siteclient'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @siteclient.email) -%>
<% end -%>
