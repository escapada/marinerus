<%= form_for [refinery, :categories_admin, @category] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @category,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :rutitle -%>
    <%= f.text_field :rutitle -%>
  </div>

  <div class='field'>
    <%= f.label :entitle -%>
    <%= f.text_field :entitle -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.categories.admin.categories.category'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @category.rutitle) -%>
<% end -%>
